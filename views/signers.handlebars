<h1>{{text}}</h1>

{{#each signers}}
    {{#if url}}
        <p><a href={{url}}>{{first}} {{last}}</a> {{age}} <a href="/signers/{{city}}">{{city}}</a></p>
    {{else}}
        <p>{{first}} {{last}} {{age}} <a href="/signers/{{city}}">{{city}}</a></p>
    {{/if}}
{{/each}}
{{#if link}}
    <a href="/signers" class="fake-button">See all supporters</a>
{{/if}}

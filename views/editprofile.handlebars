<div class="formbox">
    <h1>Edit your profile</h1>
    {{#if err}}
        <span class="error">{{err}}</span>
    {{/if}}
    <form class="" method="post">
        <input type="text" name="first" placeholder="First Name" value={{#profile}}{{first}}{{/profile}} required autofocus>
        <input type="text" name="last" placeholder="Last Name" value={{#profile}}{{last}}{{/profile}} required>
        <input type="email" name="email" placeholder="Email Address" value={{#profile}}{{email}}{{/profile}} required>
        <input type="password" name="password" placeholder="Password">
        <input type="text" name="age" pattern="[0-9]{1,3}" placeholder="Age" value={{#profile}}{{age}}{{/profile}}>
        <input type="text" name="city" placeholder="City" value={{#profile}}{{city}}{{/profile}}>
        <input type="text" name="url" placeholder="https://" value={{#profile}}{{url}}{{/profile}}>
        <button type="submit">Update profile</button>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
    <form action="/profile/delete" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button>Delete profile</button>
    </form>
</div>
